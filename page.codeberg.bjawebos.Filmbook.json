{
    "id" : "page.codeberg.bjawebos.Filmbook",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "filmbook",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "filmbook=debug",
            "CARGO_NET_OFFLINE" : "true"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
        	"name" : "filmbook",
        	"builddir" : true,
        	"buildsystem" : "meson",
        	"sources" : [
        		{
        			"type": "git",
        			"url": "https://codeberg.org/bjawebos/filmbook.git",
        			"tag": "v0.1.4",
        			"commit": "f8f47154339e78d1fb23aee99ec3e3ad1b982179"
        		},
        	  "cargo-sources.json"
            ]
        }
    ]
}
